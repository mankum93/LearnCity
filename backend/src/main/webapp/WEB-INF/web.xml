<?xml version="1.0" encoding="utf-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">
    <listener>
        <listener-class>
            com.learncity.backend.setup.ServerSetupListenerVer1
        </listener-class>
    </listener>
    <filter>
        <filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ObjectifyFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>SystemServiceServlet</servlet-name>
        <servlet-class>com.google.api.server.spi.SystemServiceServlet</servlet-class>
        <init-param>
            <param-name>services</param-name>
            <param-value>com.learncity.backend.search.SearchTutorsEndpoint,
                com.learncity.backend.account.create.endpoints.ver0.GenericLearnerProfilePersistenceEndpoint,
                com.learncity.backend.account.create.endpoints.ver0.TutorProfilePersistenceEndpoint,
                com.learncity.backend.account.create.endpoints.ver1.TutorProfileVer1PersistenceEndpoint,
                com.learncity.backend.account.create.endpoints.ver1.GenericLearnerProfileVer1PersistenceEndpoint,
                com.learncity.backend.account.login.LoginEndpoint,
                com.learncity.backend.account.create.endpoints.ver1.LearnerProfileVer1PersistenceEndpoint,
                com.learncity.backend.account.create.endpoints.LearnerProfileVer2PersistenceEndpoint,
                com.learncity.backend.account.create.endpoints.TutorProfileVer2PersistenceEndpoint
            </param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>SystemServiceServlet</servlet-name>
        <url-pattern>/_ah/spi/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>